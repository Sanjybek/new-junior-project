{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@ui/*": ["components/common/ui/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}